<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/decrease_button_label" />

                <EditText
                    android:id="@+id/number_of_players"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:text="@string/number_of_players_default_value" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/increase_button_label" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="20dp"
                    android:background="@color/colorPrimary"
                    android:text="Sima 3"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorPrimary"
                    android:padding="5dp"
                    android:text="5"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@color/colorAccent"
                    android:padding="5dp"
                    android:text="3"
                    android:textSize="25sp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:padding="20dp"
                    android:background="@color/colorAccent"
                    android:text="Sima 2"
                    android:textSize="30sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tudos_modul_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@color/colorPrimary"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Tudós modul"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />

            <GridLayout
                android:id="@+id/tudos_modul_grid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:orientation="horizontal"
                android:rowCount="2">

                <Button
                    android:id="@+id/button1"
                    android:layout_gravity="left|top"
                    android:layout_margin="25dp"
                    android:background="@color/colorPrimary"
                    android:padding="15dp"
                    android:text="Gaius"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button2"
                    android:layout_gravity="left|top"
                    android:layout_margin="25dp"
                    android:background="@color/colorAccent"
                    android:padding="15dp"
                    android:text="Aaron"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button3"
                    android:layout_gravity="left|top"
                    android:layout_margin="25dp"
                    android:background="@color/colorPrimary"
                    android:padding="15dp"
                    android:text="Apolló"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button4"
                    android:layout_gravity="left|top"
                    android:layout_margin="25dp"
                    android:background="@color/colorAccent"
                    android:padding="15dp"
                    android:text="Shelly"
                    android:textSize="30sp" />
            </GridLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@color/colorPrimary"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="5dp"
                android:text="Morális modul"
                android:textColor="@color/colorWhite"
                android:textSize="30sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
